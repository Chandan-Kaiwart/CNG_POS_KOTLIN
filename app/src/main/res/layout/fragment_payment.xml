<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Purple Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/phonepe_purple"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phonepe_payment"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_close_white"
                android:contentDescription="@string/cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Merchant Info Bar -->
    <LinearLayout
        android:id="@+id/merchantBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_gray"
            android:contentDescription="@string/close" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_merchant_logo"
            android:contentDescription="@string/merchant_logo" />

        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="LIOCLUBUAT"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/merchantBar"
        android:layout_above="@id/bottomBar"
        android:background="@color/background_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- UPI Payment Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upi_payment"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- UPI Input Card -->
            <LinearLayout
                android:id="@+id/upiInputCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/upi_input_background"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/etUpiId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/enter_upi_id"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress" />

                    <!-- Verify Button (shown before verification) -->
                    <TextView
                        android:id="@+id/btnVerify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verify"
                        android:textColor="@color/phonepe_purple"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Verified Check (shown after verification) -->
                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_verified_check"
                        android:visibility="gone"
                        android:contentDescription="@string/verified" />
                </LinearLayout>

                <!-- User Name (shown after verification) -->
                <TextView
                    android:id="@+id/tvUpiUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Other Methods Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_methods"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Debit/Credit Card Option -->
            <LinearLayout
                android:id="@+id/optionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_option_background"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_card"
                    android:contentDescription="@string/debit_credit_card" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/debit_credit_card"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="@string/select" />
            </LinearLayout>

            <!-- Net Banking Option -->
            <LinearLayout
                android:id="@+id/optionNetBanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_option_background"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bank"
                    android:contentDescription="@string/net_banking" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/net_banking"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+57"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="@string/select" />
            </LinearLayout>

            <!-- Powered by PhonePe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_phonepe_logo"
                    android:contentDescription="PhonePe" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Payment Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹93.50"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvViewBreakup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_breakup"
                    android:textColor="@color/phonepe_purple"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:background="@drawable/button_pay_disabled"
                android:text="@string/pay"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:enabled="false" />
        </LinearLayout>

        <!-- Timeout Warning -->
        <LinearLayout
            android:id="@+id/timeoutWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeout_warning_background"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="@string/timeout" />

            <TextView
                android:id="@+id/tvTimeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/timeout_message"
                android:textColor="@color/warning_orange"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Payment Pending Bottom Sheet -->
    <include
        android:id="@+id/paymentPendingSheet"
        layout="@layout/bottom_sheet_payment_pending"
        android:visibility="gone" />

</RelativeLayout>
