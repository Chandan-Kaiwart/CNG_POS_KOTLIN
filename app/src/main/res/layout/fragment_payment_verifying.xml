<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payment_blue_light">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/payment_blue"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phonepe_payment"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/processing_payment"
            android:textColor="@color/white_70"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Center Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/verifyingCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Loading Spinner -->
            <ProgressBar
                android:id="@+id/progressLoading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/payment_blue" />

            <!-- Title (bound in Kotlin: tvVerifyingTitle) -->
            <TextView
                android:id="@+id/tvVerifyingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verifying_payment_status"
                android:textColor="@color/payment_blue"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <!-- Description (bound in Kotlin: tvVerifyingDescription) -->
            <TextView
                android:id="@+id/tvVerifyingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checking_payment_status"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <!-- Progress Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <!-- Step 1 - Validate -->
                <LinearLayout
                    android:id="@+id/stepValidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvStep1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/step_active_background"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_validate"
                        android:textColor="@color/text_dark"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Line 1 -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@color/payment_blue"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="24dp" />

                <!-- Step 2 - Process -->
                <LinearLayout
                    android:id="@+id/stepProcess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvStep2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/step_active_background"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_process"
                        android:textColor="@color/text_dark"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Line 2 -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@color/step_inactive"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="24dp" />

                <!-- Step 3 - Complete -->
                <LinearLayout
                    android:id="@+id/stepComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvStep3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/step_inactive_background"
                        android:text="3"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_complete"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Close button (used in Kotlin: btnClose) -->
            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:background="@color/logo_red"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SSL Security Badge -->
    <LinearLayout
        android:id="@+id/securityBadge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyingCard"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/security_badge_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            android:contentDescription="@string/secure" />

        <TextView
            android:id="@+id/tvSslText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/ssl_encryption"
            android:textColor="@color/text_dark"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
