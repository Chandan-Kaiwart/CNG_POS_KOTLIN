<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- Header with curved background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_blue"
        android:paddingTop="40dp"
        android:paddingBottom="60dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/riico_station"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/recent_transactions"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <!-- Tab Switcher -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/tab_background"
        android:orientation="horizontal"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tabAutoSales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_background"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:paddingHorizontal="12dp"
            android:text="@string/auto_sales_transaction"
            android:textColor="@color/primary_blue"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tabManualSales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_unselected_background"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:paddingHorizontal="12dp"
            android:text="@string/manual_sales_transaction"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Auto Sales Content -->
        <LinearLayout
            android:id="@+id/autoSalesContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/primary_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/scanning_transactions"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/fetching_transactions"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <!-- RecyclerView for transactions (hidden during loading) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Manual Sales Content -->
        <ScrollView
            android:id="@+id/manualSalesContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:layout_marginBottom="24dp"-->
<!--                    android:text="@string/manual_sales_title"-->
<!--                    android:textColor="@color/primary_blue"-->
<!--                    android:textSize="22sp"-->
<!--                    android:textStyle="bold" />-->

                <!-- Sales (Kg) Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sales_kg"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etSalesKg"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/input_background"
                    android:hint="@string/enter_sales_kg"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_gray" />

                <!-- Station Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/station"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerStation"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_background"
                    android:paddingHorizontal="16dp"
                    android:spinnerMode="dropdown" />

                <!-- Dispenser Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispenser"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDispenser"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_background"
                    android:paddingHorizontal="16dp"
                    android:spinnerMode="dropdown" />

                <!-- Nozzle Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nozzle"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerNozzle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/spinner_background"
                    android:paddingHorizontal="16dp"
                    android:spinnerMode="dropdown" />

                <!-- Price Info Card -->
                <!-- Replace your priceInfoCard section with this fixed version -->

                <!-- Price Info Card -->
                <LinearLayout
                    android:id="@+id/priceInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/input_background"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp">

                    <!-- Blue left border indicator -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:background="@color/primary_blue" />

                    <!-- Content Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Gas Rate Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/gas_rate"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGasRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹93.50/kg"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Quantity Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/quantity"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 kg"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/border_gray" />

                        <!-- Total Amount Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_amount"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0.00"
                                android:textColor="@color/primary_blue"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Pay with PhonePE Button -->
                <Button
                    android:id="@+id/btnPayPhonePe"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_primary_background"
                    android:text="@string/pay_with_phonepe"
                    android:textAllCaps="false"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- Bottom Buttons (for Auto Sales) -->
    <LinearLayout
        android:id="@+id/bottomButtonsAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_secondary_background"
            android:drawableStart="@drawable/ic_arrow_left"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/back_to_home"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConfirmSelection"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-10sp"
            android:background="@drawable/button_disabled_background"
            android:gravity="center"
            android:text="@string/confirm_selection"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>
